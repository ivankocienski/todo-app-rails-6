<h1>Edit <%= @todo_list.title %></h1>

<div>
    <%= button_to 'Delete', todo_path(@todo_list), method: :delete %>
</div>

<%= form_for @todo_list, url: todo_path(@todo_list), html: { class: 'form' } do |form | %>
    <fieldset>
        <%= form.label :aspiration_id %>
        <%= form.select :aspiration_id, aspiration_options(@aspirations) %>
        <%= field_errors_for @todo_list, :aspiration_id %>
        <%= field_hints :todo_list, :aspiration_id %>
    </fieldset>
    <fieldset>
        <%= form.label :title %>
        <%= form.text_field :title, class: 'text' %>
        <%= field_errors_for @todo_list, :title %>
        <%= field_hints :todo_list, :title %>
    </fieldset>
    <fieldset class='buttons'>
        <%= form.submit 'Update', class: 'button' %>
    </fieldset>
<% end %>