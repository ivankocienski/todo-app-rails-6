<h1>Add Aspiration</h1>

<%= form_for @aspiration, html: { class: 'form' } do |form| %>
    <fieldset>
        <%= form.label :title %>
        <%= form.text_field :title, class: 'text' %>
        <%= field_errors_for @aspiration, :title %>
        <%= field_hints :aspiration, :title %>
    </fieldset>
    <fieldset>
        <%= form.label :description %>
        <%= form.text_area :description, class: 'text' %>
        <%= field_errors_for @aspiration, :description %>
        <%= field_hints :aspiration, :description %>
    </fieldset>
    <fieldset class='buttons'>
        <%= form.submit 'Create', class: 'button' %>
    </fieldset>
<% end %>