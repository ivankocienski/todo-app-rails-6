<h1>Edit Aspiration</h1>

<p><%= button_to 'Delete', aspiration_path(@aspiration), method: :delete %></p>

<%= form_for @aspiration, html: { class: 'form' } do |form| %>
    <fieldset>
        <%= form.label :title %>
        <%= form.text_field :title, class: 'text' %>
        <%= field_errors_for @aspiration, :title %>
    </fieldset>
    <fieldset>
        <%= form.label :description %>
        <%= form.text_area :description, class: 'text' %>
        <%= field_errors_for @aspiration, :description %>
    </fieldset>
    <fieldset class='buttons'>
        <%= form.submit 'Save', class: 'button' %>
    </fieldset>
<% end %>